<style>
    .hero {
        text-align: center;
        background-color: red;
        padding: 100px 20px;
    }
</style>

<div class="hero">
    <h1>{{ section.settings.heading }}</h1>
</div>

{% schema %}
{
    "name": "Simple Hero",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Default text"
        }
        
    ],
    "presets": [
        {
            "name": "Simple Hero"
        }
    ]
}
{% endschema %}